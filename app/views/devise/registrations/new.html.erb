<div class="container">
  <div class="formulaire">
    <h2>Inscription</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="input">
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "adresse@email.fr" %>
        </div>

        <div class="field">
          <%= f.label :name, value: "utilisateur" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :password, value: "mot de passe" %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, value: "confirmation" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="bloc">
        <div class="actions">
          <%= f.submit "S'enregistrer", class: "bouton" %>
          <%= render "devise/shared/links" %>
        </div>

      </div>
      <% end %>
  </div>
</div>
