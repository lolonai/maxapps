<div class="container-groupe-margin">
  <div class="chatBoxEntiere">
    <div class="msg_history">
      <% @messages.each do |message| %>
      <% date = message.created_at.strftime("le %d %b %Y Ã  %H:%M ") %>
        <% if message.user == current_user %>
          <div class="outgoing_msg msg">
            <div class="sent_msg">
              <p><%= message.contenu %></p>
              <span class="time_date date_right"> <%= date %></span>
            </div>
          </div>
        <% else %>
          <div class="incoming_msg msg">
            <div class="received_msg">
              <div class="received_withd_msg">
                <p><%= message.contenu %></p>
                <span class="time_date"> <%= message.user.name %> <%= date %></span>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="type_msg">
      <div class="input_msg_write">
        <%= form_for([@groupe, Message.new]) do |f| %>
          <%= f.text_field :contenu, rows: 1, autofocus: true, class: 'write_msg', placeholder: "Type a message" %>
          <%= f.button class: 'msg_send_btn' do %>
            <i class="far fa-paper-plane" aria-hidden="true"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
