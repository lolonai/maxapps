<div class="container-groupe-margin">
  <div class="chatBox">

    <div class="chatBoxEntiere">

    <div class="mesgs">

      <div class="msg_history">
        <% @messages.each do |message| %>
          <% if message.user == current_user %>

            <div class="outgoing_msg">
              <div class="sent_msg">
                <p><%= message.contenu %></p>
                <span class="time_date"> 11:01 AM <%=  %> | June 9 <%= message.user.name %></span>
              </div>
            </div>

          <% else %>

            <div class="incoming_msg">
              <div class="received_msg">
                <div class="received_withd_msg">
                  <p><%= message.contenu %></p>
                  <span class="time_date"> 11:01 AM    |    June 9 <%= message.user.name %></span>
                </div>
              </div>
            </div>

          <% end %>
        <% end %>
      </div>

      <div class="type_msg">
        <div class="input_msg_write">
          <%= form_for([@groupe, Message.new]) do |f| %>

            <%= f.text_field :contenu, rows: 1, autofocus: true, class: 'write_msg', placeholder: "Type a message" %>
            <!-- <input type="text" class="write_msg" placeholder="Type a message" /> -->

            <%= f.button class: 'msg_send_btn' do %>
              <i class="far fa-paper-plane" aria-hidden="true"></i>
            <% end %>
          <% end %>
        </div>
      </div>





    </div>
    </div>
  </div>
</div>
